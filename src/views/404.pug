block vars
    - title = 'Page Not Found | Nodejs Boilerplate';
    - description = '';
    - keywords = '';
    - pageID = 'top';
    - path = '.';

block container
    +container('section')
        .grid.min-h-full.place-items-center.bg-white.px-6.py-24(class='sm:py-32 lg:px-8')
            .text-center
                p.text-4xl.font-semibold.text-indigo-600 404
                h1.mt-4.text-3xl.font-bold.tracking-tight.text-gray-900(class='sm:text-5xl') Page not found
                p.mt-6.text-base.leading-7.text-gray-600 Sorry, we couldn&rsquo;t find the page you&rsquo;re looking for.
                .mt-10.flex.items-center.justify-center.gap-x-6
                    a.rounded-md.bg-indigo-600.text-sm.font-semibold.text-white.shadow-sm(
                        href=path + '/',
                        class='px-3.5 py-2.5 hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600'
                    ) Go back home
